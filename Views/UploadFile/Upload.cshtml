@model FirstIterationProductRelease.Models.UploadFile

@using (Html.BeginForm("Upload", "UploadFile", FormMethod.Post, new { enctype = "multipart/form-data" }))
{

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div>
        <label for="Source">Select Data Source:</label>
        <select asp-for="Source" class="form-control">
            <option value="">-- Select Source --</option>
            <option value="Coursera">Coursera</option>
            <option value="GoogleForms">Google Forms</option>
            <option value="Cognito">Cognito</option>
        </select>

    @Html.ValidationMessageFor(model => model.Source, "", new { @class = "text-danger" })
    </div>

    <div>
        <label for="File">Select File:</label>
        <input type="file" asp-for="File" class="form-control" />

    @Html.ValidationMessageFor(model => model.File, "", new { @class = "text-danger" })
    </div>

    <button type="submit" class="btn btn-primary">Upload</button>
}