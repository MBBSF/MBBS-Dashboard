@model IEnumerable<VolunteerManagementSystem.Models.VolunteerOppurtunity>

@{
    ViewData["Title"] = "Volunteer Oppurtunity List";
}

<h2>Volunteer Oppurtunity List</h2>
<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Date</th>
            <th>Organizer</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var volunteerOppurtunity in Model)
        {
            <tr>
                <td>@volunteerOppurtunity.Title</td>
                <td>@volunteerOppurtunity.Date</td>
                <td>@volunteerOppurtunity.Organizer</td>
                <td>
                    <a asp-action="Details" asp-route-id="@volunteerOppurtunity.VolunteerOppurtunityId" class="btn btn-info">Details</a>
                    <a asp-action="Edit" asp-route-id="@volunteerOppurtunity.VolunteerOppurtunityId" class="btn btn-primary">Edit</a>
                    <a asp-action="Delete" asp-route-id="@volunteerOppurtunity.VolunteerOppurtunityId" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<a asp-action="Create" class="btn btn-success">Add New Volunteer Oppurtunity</a>