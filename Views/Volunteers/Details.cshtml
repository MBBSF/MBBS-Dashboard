@model VolunteerManagementSystem.Models.Volunteer

@{
    ViewData["Title"] = "Volunteer Details";
}

<h2>Details</h2>

<div>
    <h4>Volunteer</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>First Name</dt>
        <dd>@Model.FirstName</dd>

        <dt>Last Name</dt>
        <dd>@Model.LastName</dd>

        <dt>Email</dt>
        <dd>@Model.Email</dd>

        <dt>Phone</dt>
        <dd>@Model.Phone</dd>

        <dt>Address</dt>
        <dd>@Model.Address</dd>
    </dl>
</div>
<a asp-action="Edit" asp-route-id="@Model.VolunteerId" class="btn btn-primary">Edit</a>
<a asp-action="Index" class="btn btn-default">Back to List</a>