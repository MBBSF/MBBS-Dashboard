@model IEnumerable<VolunteerManagementSystem.Models.Volunteer>

@{
    ViewData["Title"] = "Volunteers List";
}

<h2>Volunteers List</h2>
<table class="table">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var volunteer in Model)
        {
            <tr>
                <td>@volunteer.FirstName</td>
                <td>@volunteer.LastName</td>
                <td>@volunteer.Email</td>
                <td>
                    <a asp-action="Details" asp-route-id="@volunteer.VolunteerId" class="btn btn-info">Details</a>
                    <a asp-action="Edit" asp-route-id="@volunteer.VolunteerId" class="btn btn-primary">Edit</a>
                    <a asp-action="Delete" asp-route-id="@volunteer.VolunteerId" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<a asp-action="Create" class="btn btn-success">Add New Volunteer</a>