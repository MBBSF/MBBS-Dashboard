@model MBBS.Dashboard.web.Models.DashboardViewModel

@{
    ViewBag.Title = "Dashboard";
}

<h2>Dashboard</h2>

@if (Model == null)
{
    <p>No dashboard data available.</p>
}
else
{
    <!-- Search Bar -->
    <div class="mb-4">
        <form asp-action="ViewDataByPlatform" method="get" class="form-inline">
            <input type="hidden" name="platformId" value="@Model.PlatformId" />
            <div class="input-group w-100">
                <input type="text" class="form-control" name="searchQuery"
                       value="@Model.SearchQuery" placeholder="Search across all tables..." />
                <button type="submit" class="btn btn-primary">Search</button>
                @if (!string.IsNullOrEmpty(Model.SearchQuery))
                {
                    <a asp-action="ViewDataByPlatform"
                       asp-route-platformId="@Model.PlatformId"
                       class="btn btn-secondary ms-2">Clear</a>
                }
            </div>
        </form>
    </div>

    <h3>Key Performance Metrics</h3>
    <!-- Categorized KPIs Section -->
    <div class="row">
        <!-- Google Certification Program -->
        <div class="col-md-4">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h3>Google Certification Program</h3>
                </div>
                <div class="card-body">
                    <ul class="list-group">
                        <li class="list-group-item"><strong>Total Participants:</strong> @Model.GoogleCertificationKPIs.TotalParticipants</li>
                        <li class="list-group-item"><strong>Completed Certifications:</strong> @Model.GoogleCertificationKPIs.CompletedCertifications</li>
                        <li class="list-group-item"><strong>Completion Rate:</strong> @Model.GoogleCertificationKPIs.CompletionRate.ToString("P2")</li>
                        <li class="list-group-item"><strong>Active Learners:</strong> @Model.GoogleCertificationKPIs.ActiveLearners</li>
                    </ul>

                    <h4 class="mt-3">Specialization Distribution</h4>
                    <ul class="list-group">
                        @{
                            var specializationItems = Model.GoogleCertificationKPIs.SpecializationDistribution
                            .AsEnumerable()
                            .OrderByDescending(pair => pair.Value);
                        }
                        @foreach (var kvp in specializationItems)
                        {
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                @kvp.Key
                                <span class="badge bg-primary rounded-pill">@kvp.Value</span>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </div>

        <!-- Mentoring Program -->
        <div class="col-md-4">
            <div class="card">
                <div class="card-header bg-success text-white">
                    <h3>Mentoring Program</h3>
                </div>
                <div class="card-body">
                    <ul class="list-group">
                        <li class="list-group-item"><strong>Total Sessions:</strong> @Model.MentoringProgramKPIs.TotalMentoringSessions</li>
                        <li class="list-group-item"><strong>Unique Mentees:</strong> @Model.MentoringProgramKPIs.UniqueMentees</li>
                        <li class="list-group-item"><strong>Avg Sessions/Mentee:</strong> @Model.MentoringProgramKPIs.AverageSessionsPerMentee.ToString("F1")</li>
                    </ul>

                    <h4 class="mt-3">Top Mentors</h4>
                    <ol class="list-group list-group-numbered">
                        @foreach (var mentor in Model.MentoringProgramKPIs.TopMentors)
                        {
                            <li class="list-group-item">@mentor</li>
                        }
                    </ol>
                </div>
            </div>
        </div>

        <!-- Scholarship Application Program -->
        <div class="col-md-4">
            <div class="card">
                <div class="card-header bg-info text-white">
                    <h3>Scholarship Application Program</h3>
                </div>
                <div class="card-body">
                    <ul class="list-group">
                        <li class="list-group-item"><strong>Total Applications:</strong> @Model.ScholarshipApplicationKPIs.TotalApplications</li>
                        <li class="list-group-item"><strong>Phone Provision Rate:</strong> @Model.ScholarshipApplicationKPIs.PhoneNumberProvisionRate.ToString("P2")</li>
                        <li class="list-group-item"><strong>Average GPA:</strong> @Model.ScholarshipApplicationKPIs.AverageGPA.ToString("F2")</li>
                    </ul>

                    <h4 class="mt-3">Top Intended Majors</h4>
                    <ul class="list-group">
                        @{
                            var sortedMajors = Model.ScholarshipApplicationKPIs.IntendedMajorDistribution
                            .AsEnumerable()
                            .OrderByDescending(pair => pair.Value);
                        }
                        @foreach (var kvp in sortedMajors)
                        {
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                @kvp.Key
                                <span class="badge bg-info rounded-pill">@kvp.Value</span>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <!-- Platform Data Section -->
    <div class="row mt-4">
        <div class="col-md-6">
            <h3>Platform Data</h3>
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Quick Platform Overview</h5>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">Coursera Users: @Model.KpiData.TotalCourseraUsers</li>
                        <li class="list-group-item">Cognito Users: @Model.KpiData.TotalCognitoUsers</li>
                        <li class="list-group-item">Google Forms Users: @Model.KpiData.TotalGoogleFormsUsers</li>
                    </ul>
                    <div class="mt-3">
                        <a href="@Url.Action("ViewDataByPlatform", new { platformId = 1 })" class="btn btn-sm btn-outline-primary">Coursera Details</a>
                        <a href="@Url.Action("ViewDataByPlatform", new { platformId = 2 })" class="btn btn-sm btn-outline-primary">Cognito Details</a>
                        <a href="@Url.Action("ViewDataByPlatform", new { platformId = 3 })" class="btn btn-sm btn-outline-primary">Google Forms Details</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Platform-Specific Reports Section -->
    @if (Model.PlatformId > 0)
    {
        <div class="mt-4">
            <h3>Platform-Specific Data</h3>

            @if (Model.PlatformId == 1) // Coursera
            {
                <h3>Coursera Reports</h3>

                <ul class="nav nav-tabs" id="courseraReportsTab" role="tablist">
                    <li class="nav-item" role="presentation">
                        <button class="nav-link active" id="specialization-tab" data-bs-toggle="tab" data-bs-target="#specialization" type="button" role="tab">Specialization Report</button>
                    </li>
                    <li class="nav-item" role="presentation">
                        <button class="nav-link" id="membership-tab" data-bs-toggle="tab" data-bs-target="#membership" type="button" role="tab">Membership Report</button>
                    </li>
                    <li class="nav-item" role="presentation">
                        <button class="nav-link" id="location-tab" data-bs-toggle="tab" data-bs-target="#location" type="button" role="tab">Location Report</button>
                    </li>
                    <li class="nav-item" role="presentation">
                        <button class="nav-link" id="usage-tab" data-bs-toggle="tab" data-bs-target="#usage" type="button" role="tab">Usage Report</button>
                    </li>
                </ul>

                <div class="tab-content" id="courseraReportsTabContent">
                    <!-- Specialization Report -->
                    <div class="tab-pane fade show active" id="specialization" role="tabpanel">
                        <table class="table table-striped mt-3">
                            <thead>
                                <tr>
                                    <th><a asp-action="ViewDataByPlatform" asp-route-platformId="1" asp-route-sortBy="Name" asp-route-sortOrder="@(Model.CurrentSortOrder)">Name</a></th>
                                    <th><a asp-action="ViewDataByPlatform" asp-route-platformId="1" asp-route-sortBy="Email" asp-route-sortOrder="@(Model.CurrentSortOrder)">Email</a></th>
                                    <th><a asp-action="ViewDataByPlatform" asp-route-platformId="1" asp-route-sortBy="Specialization" asp-route-sortOrder="@(Model.CurrentSortOrder)">Specialization</a></th>
                                    <th><a asp-action="ViewDataByPlatform" asp-route-platformId="1" asp-route-sortBy="Completed" asp-route-sortOrder="@(Model.CurrentSortOrder)">Completed</a></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.CourseraPlatformData ?? new List<PlatformDataViewModel.CourseraSpecializationData>())
                                {
                                    <tr>
                                        <td>@item.Name</td>
                                        <td>@item.Email</td>
                                        <td>@item.Specialization</td>
                                        <td>@item.Completed</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                    <!-- Membership Report -->
                    <div class="tab-pane fade" id="membership" role="tabpanel">
                        <table class="table table-striped mt-3">
                            <thead>
                                <tr>
                                    <th><a asp-action="ViewDataByPlatform" asp-route-platformId="1" asp-route-sortBy="Name" asp-route-sortOrder="@(Model.CurrentSortOrder)">Name</a></th>
                                    <th><a asp-action="ViewDataByPlatform" asp-route-platformId="1" asp-route-sortBy="Email" asp-route-sortOrder="@(Model.CurrentSortOrder)">Email</a></th>
                                    <th><a asp-action="ViewDataByPlatform" asp-route-platformId="1" asp-route-sortBy="ProgramName" asp-route-sortOrder="@(Model.CurrentSortOrder)">Program</a></th>
                                    <th><a asp-action="ViewDataByPlatform" asp-route-platformId="1" asp-route-sortBy="EnrolledCourses" asp-route-sortOrder="@(Model.CurrentSortOrder)">Enrolled Courses</a></th>
                                    <th><a asp-action="ViewDataByPlatform" asp-route-platformId="1" asp-route-sortBy="CompletedCourses" asp-route-sortOrder="@(Model.CurrentSortOrder)">Completed Courses</a></th>
                                    <th><a asp-action="ViewDataByPlatform" asp-route-platformId="1" asp-route-sortBy="MemberState" asp-route-sortOrder="@(Model.CurrentSortOrder)">Status</a></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var report in Model.CourseraMembershipReports ?? new List<KpiDataViewModel.CourseraMembershipReportViewModel>())
                                {
                                    <tr>
                                        <td>@report.Name</td>
                                        <td>@report.Email</td>
                                        <td>@report.ProgramName</td>
                                        <td>@report.EnrolledCourses</td>
                                        <td>@report.CompletedCourses</td>
                                        <td>@report.MemberState</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                    <!-- Location Report -->
                    <div class="tab-pane fade" id="location" role="tabpanel">
                        <table class="table table-striped mt-3">
                            <thead>
                                <tr>
                                    <th><a asp-action="ViewDataByPlatform" asp-route-platformId="1" asp-route-sortBy="LocationCity" asp-route-sortOrder="@(Model.CurrentSortOrder)">Location City</a></th>
                                    <th><a asp-action="ViewDataByPlatform" asp-route-platformId="1" asp-route-sortBy="CurrentMembers" asp-route-sortOrder="@(Model.CurrentSortOrder)">Current Members</a></th>
                                    <th><a asp-action="ViewDataByPlatform" asp-route-platformId="1" asp-route-sortBy="CurrentLearners" asp-route-sortOrder="@(Model.CurrentSortOrder)">Current Learners</a></th>
                                    <th><a asp-action="ViewDataByPlatform" asp-route-platformId="1" asp-route-sortBy="TotalEnrollments" asp-route-sortOrder="@(Model.CurrentSortOrder)">Total Enrollments</a></th>
                                    <th><a asp-action="ViewDataByPlatform" asp-route-platformId="1" asp-route-sortBy="TotalCompletedCourses" asp-route-sortOrder="@(Model.CurrentSortOrder)">Completed Courses</a></th>
                                    <th><a asp-action="ViewDataByPlatform" asp-route-platformId="1" asp-route-sortBy="AverageProgress" asp-route-sortOrder="@(Model.CurrentSortOrder)">Avg Progress</a></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var report in Model.CourseraPivotLocationCityReports ?? new List<KpiDataViewModel.CourseraPivotLocationCityReportViewModel>())
                                {
                                    <tr>
                                        <td>@report.LocationCity</td>
                                        <td>@report.CurrentMembers</td>
                                        <td>@report.CurrentLearners</td>
                                        <td>@report.TotalEnrollments</td>
                                        <td>@report.TotalCompletedCourses</td>
                                        <td>@(report.AverageProgress?.ToString("P0") ?? "N/A")</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                    <!-- Usage Report -->
                    <div class="tab-pane fade" id="usage" role="tabpanel">
                        <table class="table table-striped mt-3">
                            <thead>
                                <tr>
                                    <th><a asp-action="ViewDataByPlatform" asp-route-platformId="1" asp-route-sortBy="Name" asp-route-sortOrder="@(Model.CurrentSortOrder)">Name</a></th>
                                    <th><a asp-action="ViewDataByPlatform" asp-route-platformId="1" asp-route-sortBy="Course" asp-route-sortOrder="@(Model.CurrentSortOrder)">Course</a></th>
                                    <th><a asp-action="ViewDataByPlatform" asp-route-platformId="1" asp-route-sortBy="OverallProgress" asp-route-sortOrder="@(Model.CurrentSortOrder)">Progress</a></th>
                                    <th><a asp-action="ViewDataByPlatform" asp-route-platformId="1" asp-route-sortBy="Completed" asp-route-sortOrder="@(Model.CurrentSortOrder)">Completed</a></th>
                                    <th><a asp-action="ViewDataByPlatform" asp-route-platformId="1" asp-route-sortBy="EstimatedLearningHours" asp-route-sortOrder="@(Model.CurrentSortOrder)">Learning Hours</a></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var report in Model.CourseraUsageReports ?? new List<KpiDataViewModel.CourseraUsageReportViewModel>())
                                {
                                    <tr>
                                        <td>@report.Name</td>
                                        <td>@report.Course</td>
                                        <td>@(report.OverallProgress?.ToString("P0") ?? "N/A")</td>
                                        <td>@report.Completed</td>
                                        <td>@report.EstimatedLearningHours</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            }
            else if (Model.PlatformId == 2) // Cognito
            {
                <table class="table table-striped mt-3">
                    <thead>
                        <tr>
                            <th><a asp-action="ViewDataByPlatform" asp-route-platformId="2" asp-route-sortBy="Name_First" asp-route-sortOrder="@(Model.CurrentSortOrder)">First Name</a></th>
                            <th><a asp-action="ViewDataByPlatform" asp-route-platformId="2" asp-route-sortBy="Name_Last" asp-route-sortOrder="@(Model.CurrentSortOrder)">Last Name</a></th>
                            <th><a asp-action="ViewDataByPlatform" asp-route-platformId="2" asp-route-sortBy="Phone" asp-route-sortOrder="@(Model.CurrentSortOrder)">Phone</a></th>
                            <th><a asp-action="ViewDataByPlatform" asp-route-platformId="2" asp-route-sortBy="IntendedMajor" asp-route-sortOrder="@(Model.CurrentSortOrder)">Intended Major</a></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.CognitoPlatformData ?? new List<PlatformDataViewModel.CognitoData>())
                        {
                            <tr>
                                <td>@item.Name_First</td>
                                <td>@item.Name_Last</td>
                                <td>@item.Phone</td>
                                <td>@item.IntendedMajor</td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else if (Model.PlatformId == 3) // Google Forms
            {
                <table class="table table-striped mt-3">
                    <thead>
                        <tr>
                            <th><a asp-action="ViewDataByPlatform" asp-route-platformId="3" asp-route-sortBy="Mentor" asp-route-sortOrder="@(Model.CurrentSortOrder)">Mentor</a></th>
                            <th><a asp-action="ViewDataByPlatform" asp-route-platformId="3" asp-route-sortBy="Mentee" asp-route-sortOrder="@(Model.CurrentSortOrder)">Mentee</a></th>
                            <th><a asp-action="ViewDataByPlatform" asp-route-platformId="3" asp-route-sortBy="Date" asp-route-sortOrder="@(Model.CurrentSortOrder)">Date</a></th>
                            <th><a asp-action="ViewDataByPlatform" asp-route-platformId="3" asp-route-sortBy="MethodOfContact" asp-route-sortOrder="@(Model.CurrentSortOrder)">Method of Contact</a></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.GoogleFormsPlatformData ?? new List<PlatformDataViewModel.GoogleFormsData>())
                        {
                            <tr>
                                <td>@item.Mentor</td>
                                <td>@item.Mentee</td>
                                <td>@(item.Date?.ToString("d") ?? "N/A")</td>
                                <td>@item.MethodOfContact</td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
        </div>
    }

    <!-- Activity Logs Section -->
    <div class="mt-4">
        <h3>Activity Logs</h3>
        @if (Model.ActivityLogs != null && Model.ActivityLogs.Any())
        {
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Timestamp</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var log in Model.ActivityLogs)
                    {
                        <tr>
                            <td>@log.Timestamp.ToString("g")</td>
                            <td>@log.Action</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p>No activity logs found.</p>
        }
    </div>
}