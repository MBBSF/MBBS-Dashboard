@model MBBS.Dashboard.web.Models.DashboardViewModel

@{
    ViewBag.Title = "Dashboard";
}


<h2>Dashboard</h2>

<form method="post" asp-controller="Dashboard" asp-action="ApplyFilter">
    <label for="filter">Filter Criteria:</label>
    <input type="text" id="filter" name="filterCriteria" />
    <button type="submit">Apply Filter</button>
</form>

<form method="post" asp-controller="Dashboard" asp-action="ViewDataByPlatform">
    <label for="platform">Select Platform:</label>
    <select id="platform" name="platformId">
        <option value="1">Coursera</option>
        <option value="2">Cognito</option>
        <option value="3">Google Forms</option>
    </select>
    <button type="submit">Switch Platform</button>
</form>

@if (ViewBag.Message != null)
{
    <p>@ViewBag.Message</p>
}

@if (ViewBag.Filter != null)
{
    <p>Filter Applied: @ViewBag.Filter</p>
}
